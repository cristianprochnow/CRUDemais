<Window x:Class="CRUDemais.DataView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRUDemais"
        mc:Ignorable="d"
        Title="CRUD+" Height="450" Width="800">
    <Grid>
        <Button x:Name="BTNadd" Content="Adicionar" HorizontalAlignment="Left" Margin="32,34,0,0" VerticalAlignment="Top" Height="40" Width="98" FontFamily="Cascadia Mono" Click="BTNadd_Click"/>
        <Button x:Name="BTNedit" Content="Editar" HorizontalAlignment="Left" Margin="141,34,0,0" VerticalAlignment="Top" Height="40" Width="77" FontFamily="Cascadia Mono" Click="BTNedit_Click"/>
        <Button x:Name="BTNdelete" Content="Excluir" HorizontalAlignment="Left" Margin="230,34,0,0" VerticalAlignment="Top" Height="40" Width="81" FontFamily="Cascadia Mono" Click="BTNdelete_Click"/>
        <DataGrid x:Name="DTGdados" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,110,0,-11" FontFamily="Cascadia Mono"/>
    </Grid>
</Window>
